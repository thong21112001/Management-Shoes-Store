@page
@model IndexModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Thông tin cá nhân";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row justify-content-center align-items-center">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="text-center mb-3">
                <h4 class="text-uppercase">@ViewData["Title"]</h4>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" disabled />
                <label asp-for="Email" class="form-label"></label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.FullName" class="form-control" placeholder="Nhập họ và tên." />
                <label asp-for="Input.FullName" class="form-label"></label>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Nhập số điện thoại."/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-warning">Cập nhập</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
