@page
@model ShoesStore.Web.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
}


@section Styles {
    <link href="~/css/datatables/datatablescss.css" rel="stylesheet" />
}

<div class="content-section">
    <h2>Danh mục giày</h2>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <p>
                <a asp-page="Create" class="btn btn-primary btn-sm">
                    <i class="fa-light fa-plus"></i> Thêm mới
                </a>
            </p>

            <table id="myTable" class="table table-striped table-bordered nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th class="stt">
                            STT
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Categories[0].Name)
                        </th>
                        <th class="d-none d-md-table-cell">
                            @Html.DisplayNameFor(model => model.Categories[0].Description)
                        </th>
                        <th class="no-sort">
                            Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td></td>
                            <td>
                                @(item.Name?.Length > 30 ? item.Name.Substring(0,30) + "..." : item.Name)
                            </td>
                            <td class="d-none d-md-table-cell">
                                @(item.Description?.Length > 30 ? item.Description.Substring(0, 30) + "..." : item.Description)
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm mt-1">
                                    <i class="fa-solid fa-pen"></i>
                                </a>
                                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm mt-1">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm mt-1">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/datatables/datatablesconfig.js"></script>
    <script>
        $(function() {
          initDataTable("#myTable", {
            order: [[1, "asc"]],
            columnDefs: [
              { targets: 0, className: "text-center" },
              { targets: 3, className: "text-center" }
            ]
          });
        });
    </script>
    @await Html.PartialAsync("_SweetAlert2Partial")
}
