@model ShoesStore.Application.Features.Products.Queries.Shared.Product.ProductDetailsDto

<div class="modal-header">
    <h3 class="modal-title fs-5 text-e text-uppercase" id="staticBackdropLabel">Thông tin chi tiết</h3>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <div class="row">
        <div class="form-group col-md-6 mb-3">
            <label asp-for="@Model.Name" class="control-label"></label>
            <input asp-for="@Model.Name" class="form-control" disabled readonly />
        </div>
        <div class="form-group col-md-6 mb-3">
            <label asp-for="@Model.BrandName" class="control-label"></label>
            <input asp-for="@Model.BrandName" class="form-control" disabled readonly />
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-6 mb-3">
            <label asp-for="@Model.CreatedAt" class="control-label"></label>
            <input asp-for="@Model.CreatedAt" class="form-control" disabled readonly />
        </div>
        <div class="form-group col-md-6 mb-3">
            <label asp-for="@Model.UpdatedAt" class="control-label"></label>
            <input asp-for="@Model.UpdatedAt" class="form-control" disabled readonly />
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-12 mb-3">
            <label asp-for="@Model.Description" class="control-label"></label>
            <input asp-for="@Model.Description" class="form-control" disabled readonly />
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-12 mb-3">
            <label asp-for="@Model.Categories" class="control-label"></label>
            <input asp-for="@Model.Categories" class="form-control" disabled readonly />
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-6 mb-3">
            @if (Model.MainImageUrl != null && Model.MainImageUrl.Length > 0)
            {
                <label>Hình ảnh sản phẩm</label>
                <div>
                    <img id="preview"
                         src="@(Model.ImageRenderedUrl)"
                         alt="preview" class="img-thumbnail"
                         style="max-width: 100%; height: 150px;" />
                </div>
            }
        </div>
        <div class="form-group col-md-6 mb-3">
            <label asp-for="@Model.AnyProductVar" class="control-label"></label>
            <input asp-for="@Model.AnyProductVar" class="form-control" disabled readonly />
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary btn-sm mt-1" data-bs-dismiss="modal">Đóng</button>
    <a asp-page="./Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm mt-1">
        <i class="fas fa-edit"></i> Chỉnh sửa
    </a>
</div>